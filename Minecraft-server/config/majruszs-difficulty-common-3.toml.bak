UndeadArmy = {}

[Features]

	#Configuration for Bandage item.
	[Features.Bandage]
		#Is Bandage always usable? If not player can only use Bandage when it is bleeding.
		is_always_usable = true
		#Duration in seconds of Regeneration effect.
		#Range: 1.0 ~ 120.0
		regeneration_duration = 4.0
		#Level/amplifier of Regeneration effect.
		#Range: 0 ~ 10
		regeneration_amplifier = 0

	#Hermes Boots item configuration.
	[Features.HermesBoots]
		#Movement speed extra multiplier. (requires game/world restart!)
		#Range: 0.0 ~ 5.0
		movement_speed_bonus = 0.25

	#Config for End Leggings ability.
	[Features.EndLeggings]
		#Armor bonus for every enchantment level.
		#Range: 0.0 ~ 10.0
		armor_bonus = 0.2

	#Configuration for GoldenBandage item.
	[Features.GoldenBandage]
		#Is GoldenBandage always usable? If not player can only use GoldenBandage when it is bleeding.
		is_always_usable = true
		#Duration in seconds of Regeneration effect.
		#Range: 1.0 ~ 120.0
		regeneration_duration = 4.0
		#Level/amplifier of Regeneration effect.
		#Range: 0 ~ 10
		regeneration_amplifier = 1
		#Duration in seconds of Bleeding Immunity effect.
		#Range: 1.0 ~ 600.0
		immunity_duration = 90.0

	#Configuration for treasure bags.
	[Features.TreasureBag]
		#Is treasure bag from Undead Army available in survival mode?
		undead_army = true
		#Is treasure bag from Elder Guardian available in survival mode?
		elder_guardian = true
		#Is treasure bag from Wither available in survival mode?
		wither = true
		#Is treasure bag from Ender Dragon available in survival mode?
		ender_dragon = true
		#Is treasure bag from Fishing available in survival mode?
		fishing = true
		#Is treasure bag from Pillager Raid available in survival mode?
		pillager = true

	#Configuration for new late game ore.
	[Features.EndShardOre]
		#Should this ore be available in survival mode? (ore generation, loot tables etc.) (requires game restart!)
		is_enabled = true
		#Maximum distance within which all nearby Endermans will be triggered. (when block was mined)
		#Range: 0.0 ~ 1000000.0
		trigger_distance = 700.0

	#Bleeding potion effect.
	[Features.Bleeding]
		#Damage dealt by bleeding every tick.
		#Range: 0.0 ~ 20.0
		damage = 1.0
		#Cooldown between attacking entity.
		#Range: 0.0 ~ 20.0
		cooldown = 4.0
		#Bleeding chance reduction per armor piece.
		#Range: 0.0 ~ 0.25
		armor_reduction = 0.2
		#List of entities that are immune to Bleeding effect. (only human-like mobs and animals)
		black_list = ["minecraft:skeleton_horse"]

		#Bleeding amplifier.
		[Features.Bleeding.amplifier]
			#Normal Mode
			#Range: 0 ~ 10
			normal = 0
			#Expert Mode
			#Range: 0 ~ 10
			expert = 1
			#Master Mode
			#Range: 0 ~ 10
			master = 2

	#Spider inflicts poison.
	[Features.SpiderPoison]
		#Is this feature enabled?
		is_enabled = true
		#Chance of this feature to happen. (this value is scaled by Clamped Regional Difficulty)
		#Range: 0.0 ~ 1.0
		chance = 0.25

	#Sky Keeper inflicts levitation.
	[Features.SkyKeeperLevitation]
		#Is this feature enabled?
		is_enabled = true
		#Chance of this feature to happen. (this value is scaled by Clamped Regional Difficulty)
		#Range: 0.0 ~ 1.0
		chance = 0.5
		#Effect duration in seconds.
		#Range: 1.0 ~ 600.0
		duration = 6.0

	#Drowned attacks with trident spawn lightning bolt.
	[Features.DrownedLightning]
		#Is this feature enabled?
		is_enabled = true
		#Chance of this feature to happen. (this value is scaled by Clamped Regional Difficulty)
		#Range: 0.0 ~ 1.0
		chance = 0.25

	#Drowning inflicts Nausea and Drowning.
	[Features.NauseaAndWeaknessWhenDrowning]
		#Is this feature enabled?
		is_enabled = true
		#Chance of this feature to happen. 
		#Range: 0.0 ~ 1.0
		chance = 1.0
		#Effects duration in seconds.
		#Range: 1.0 ~ 600.0
		duration = 5.0

	#Wither Sword inflicts Wither II.
	[Features.WitherSword]
		#Is this feature enabled?
		is_enabled = true
		#Chance of this feature to happen. 
		#Range: 0.0 ~ 1.0
		chance = 1.0
		#Effect duration in seconds.
		#Range: 1.0 ~ 600.0
		duration = 6.0

	#Touching cactus inflict bleeding.
	[Features.CactusBleeding]
		#Is this feature enabled?
		is_enabled = true
		#Chance of this feature to happen. 
		#Range: 0.0 ~ 1.0
		chance = 0.5
		#Effect duration in seconds.
		#Range: 1.0 ~ 600.0
		duration = 24.0

	#All sharp items inflict bleeding. (tools, weapons, shears etc.)
	[Features.SharpItemBleeding]
		#Is this feature enabled?
		is_enabled = true
		#Chance of this feature to happen. 
		#Range: 0.0 ~ 1.0
		chance = 0.25
		#Effect duration in seconds.
		#Range: 1.0 ~ 600.0
		duration = 24.0

	#Arrow inflicts bleeding.
	[Features.ArrowBleeding]
		#Is this feature enabled?
		is_enabled = true
		#Chance of this feature to happen. 
		#Range: 0.0 ~ 1.0
		chance = 0.25
		#Effect duration in seconds.
		#Range: 1.0 ~ 600.0
		duration = 24.0

	#Thrown trident cause bleeding on target.
	[Features.TridentBleeding]
		#Is this feature enabled?
		is_enabled = true
		#Chance of this feature to happen. 
		#Range: 0.0 ~ 1.0
		chance = 0.5
		#Effect duration in seconds.
		#Range: 1.0 ~ 600.0
		duration = 30.0

	#Animals, zombies and spiders inflict bleeding.
	[Features.BiteBleeding]
		#Is this feature enabled?
		is_enabled = true
		#Chance of this feature to happen. 
		#Range: 0.0 ~ 1.0
		chance = 0.5
		#Effect duration in seconds.
		#Range: 1.0 ~ 600.0
		duration = 24.0

	#Enderman attack teleports the player somewhere nearby.
	[Features.EndermanTeleport]
		#Is this feature enabled?
		is_enabled = true
		#Chance of this feature to happen. (this value is scaled by Clamped Regional Difficulty)
		#Range: 0.0 ~ 1.0
		chance = 0.5

	#Sneaking while attacking with End Sword inflicts levitation.
	[Features.EndSwordLevitation]
		#Is this feature enabled?
		is_enabled = true
		#Chance of this feature to happen. 
		#Range: 0.0 ~ 1.0
		chance = 0.5
		#Effect duration in seconds.
		#Range: 1.0 ~ 600.0
		duration = 4.0

	#Makes all nearby enderman target player when it hits any of them.
	[Features.EndermanAttack]
		#Is this feature enabled?
		is_enabled = true

	#Shulker inflict Blindness.
	[Features.ShulkerBlindness]
		#Is this feature enabled?
		is_enabled = true
		#Chance of this feature to happen. (this value is scaled by Clamped Regional Difficulty)
		#Range: 0.0 ~ 1.0
		chance = 0.5
		#Effect duration in seconds.
		#Range: 1.0 ~ 600.0
		duration = 5.0

	#Applies Nausea and Slowness on fall.
	[Features.FallEffects]
		#Is this feature enabled?
		is_enabled = true
		#Chance of this feature to happen. 
		#Range: 0.0 ~ 1.0
		chance = 1.0
		#Effects duration in seconds.
		#Range: 1.0 ~ 600.0
		duration = 10.0
		#Is applying Nausea enabled?
		nausea = true
		#Is applying Slowness enabled?
		slowness = true

	#Makes all Creepers take less damage from other Creepers.
	[Features.CreeperExplosionReduction]
		#Is this feature enabled?
		is_enabled = true
		#Damage multiplier when Creepers attack Creeper.
		#Range: 0.0 ~ 1.0
		damage_multiplier = 0.1

	#Makes all Creepers ignite every nearby Creeper when exploding.
	[Features.CreeperIgnite]
		#Is this feature enabled?
		is_enabled = true

	#Slime inflicts Slowness.
	[Features.SlimeSlowness]
		#Is this feature enabled?
		is_enabled = true
		#Chance of this feature to happen. (this value is scaled by Clamped Regional Difficulty)
		#Range: 0.0 ~ 1.0
		chance = 0.5
		#Effect duration in seconds.
		#Range: 1.0 ~ 600.0
		duration = 6.0

	#Damage and health bonuses of hostile creatures.
	[Features.SpawnBonuses]
		#Is this feature enabled?
		is_enabled = true
		#Chance of this feature to happen. 
		#Range: 0.0 ~ 1.0
		chance = 1.0
		#Extra damage and health multiplier at night.
		#Range: 1.0 ~ 10.0
		night_multiplier = 2.0

		#Extra health multiplier.
		[Features.SpawnBonuses.HealthMultiplier]
			#Normal Mode
			#Range: 0.0 ~ 10.0
			normal = 0.0
			#Expert Mode
			#Range: 0.0 ~ 10.0
			expert = 0.2
			#Master Mode
			#Range: 0.0 ~ 10.0
			master = 0.4

		#Extra damage multiplier.
		[Features.SpawnBonuses.DamageMultiplier]
			#Normal Mode
			#Range: 0.0 ~ 10.0
			normal = 0.0
			#Expert Mode
			#Range: 0.0 ~ 10.0
			expert = 0.2
			#Master Mode
			#Range: 0.0 ~ 10.0
			master = 0.4

	#Wither Skeleton spawns with Wither Sword.
